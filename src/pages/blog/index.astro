---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const allPosts = await getCollection('blog', ({ data }) => {
  return data.published === true;
});

// Sort by date descending
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Blog - Amirdaraee">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12" id="main-content">
    <h1 class="text-4xl font-bold text-center mb-12 text-gray-900 dark:text-gray-100">Blog Posts</h1>

    <section aria-label="Blog post listing">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {sortedPosts.map((post) => (
          <article class="blog-card bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden flex flex-col h-full transition-all duration-200 hover:-translate-y-1 hover:shadow-lg" aria-labelledby={`post-title-${post.slug}`}>
            {post.data.photo && (
              <picture>
                <source srcset={`/${post.data.photo.replace(/\.(png|jpg|jpeg)$/, '.webp')}`} type="image/webp">
                <img
                  src={`/${post.data.photo}`}
                  class="w-full h-48 object-cover"
                  alt={`Featured image for ${post.data.title}`}
                  loading="lazy"
                  width="400"
                  height="192"
                />
              </picture>
            )}
            <div class="p-6 flex flex-col flex-grow">
              <h2 id={`post-title-${post.slug}`} class="text-xl font-semibold mb-3 text-gray-900 dark:text-gray-100">{post.data.title}</h2>
              <p class="text-gray-600 dark:text-gray-400 mb-4 flex-grow">{post.data.description}</p>
              <div class="mt-auto">
                <time datetime={post.data.date.toISOString()} class="text-gray-500 dark:text-gray-400 text-sm block mb-2">
                  {post.data.date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                <div class="text-right">
                  <a
                    href={`/blog/${post.slug}`}
                    class="inline-block px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors duration-200"
                    aria-label={`Read full article: ${post.data.title}`}
                  >
                    Read More
                  </a>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>
  </div>
</Layout>
