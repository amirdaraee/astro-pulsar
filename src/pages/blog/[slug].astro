---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Structured Data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": post.data.title,
  "description": post.data.description,
  "image": post.data.photo ? `https://amirdaraee.com/${post.data.photo.replace(/\.(png|jpg|jpeg)$/, '.webp')}` : "https://amirdaraee.com/logo.webp",
  "datePublished": post.data.date.toISOString(),
  "dateModified": post.data.date.toISOString(),
  "author": {
    "@type": "Person",
    "name": post.data.author || "Amir Daraee",
    "url": "https://amirdaraee.com"
  },
  "publisher": {
    "@type": "Person",
    "name": "Amir Daraee",
    "logo": {
      "@type": "ImageObject",
      "url": "https://amirdaraee.com/logo.webp"
    }
  },
  "keywords": post.data.keywords?.join(', ') || '',
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://amirdaraee.com/blog/${post.slug}`
  }
};
---

<Layout
  title={post.data.title}
  description={post.data.description}
  type="article"
  author={post.data.author}
  publishedTime={post.data.date}
  {...(post.data.keywords && { tags: post.data.keywords })}
  {...(post.data.photo && { image: post.data.photo })}
>
  <script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12" role="article" aria-labelledby="article-title" lang={post.data.language || 'en'}>
    <div class="max-w-3xl mx-auto">
      <header class="mb-8">
        <h1 id="article-title" class="text-4xl font-bold mb-4 text-gray-900 dark:text-gray-100">{post.data.title}</h1>

        <div class="text-gray-500 dark:text-gray-400 mb-4 text-sm">
          <time datetime={post.data.date.toISOString()} aria-label={`Published on ${post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}`}>
            {post.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          {' '} • {' '}
          <span aria-label="Author">By {post.data.author}</span>
        </div>

        {post.data.keywords && post.data.keywords.length > 0 && (
          <nav class="mb-4" aria-label="Article topics">
            <ul class="flex flex-wrap gap-2 list-none p-0 m-0">
              {post.data.keywords.map((keyword: string) => (
                <li>
                  <span class="inline-block px-3 py-1 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-sm rounded-full" role="note">{keyword}</span>
                </li>
              ))}
            </ul>
          </nav>
        )}

        {post.data.photo && (
          <figure class="mb-4">
            <picture>
              <source srcset={`/${post.data.photo.replace(/\.(png|jpg|jpeg)$/, '.webp')}`} type="image/webp">
              <img
                src={`/${post.data.photo}`}
                alt={`Featured image for ${post.data.title}`}
                class="w-full h-auto rounded-lg"
                loading="eager"
                width="800"
                height="400"
              />
            </picture>
            {post.data.imgCredit && (
              <figcaption class="text-gray-500 dark:text-gray-400 mt-2 text-sm">
                Image credit: {post.data.imgCredit}
              </figcaption>
            )}
          </figure>
        )}
      </header>

      <div class="prose dark:prose-invert" role="main" id="main-content">
        <Content />
      </div>

      <hr class="my-10 border-gray-300 dark:border-gray-700" role="separator" />

      <nav class="text-center" aria-label="Post navigation">
        <a
          href="/blog"
          class="inline-block px-6 py-3 border-2 border-blue-600 dark:border-blue-400 text-blue-600 dark:text-blue-400 rounded-md hover:bg-blue-600 hover:text-white dark:hover:bg-blue-400 dark:hover:text-gray-900 transition-colors duration-200"
          aria-label="Return to blog post listing"
        >
          ← Back to Blog
        </a>
      </nav>
    </div>
  </article>
</Layout>

<style is:global>
  .prose {
    max-width: 100%;
    line-height: 1.8;
    color: #374151;
  }

  .dark .prose {
    color: #d1d5db;
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 600;
    color: #1f2937;
  }

  .dark .prose h1,
  .dark .prose h2,
  .dark .prose h3,
  .dark .prose h4,
  .dark .prose h5,
  .dark .prose h6 {
    color: #f3f4f6;
  }

  .prose h1 {
    font-size: 2rem;
  }

  .prose h2 {
    font-size: 1.5rem;
  }

  .prose h3 {
    font-size: 1.25rem;
  }

  .prose p {
    margin-bottom: 1.5rem;
  }

  .prose a {
    color: #007bff;
    text-decoration: none;
  }

  .dark .prose a {
    color: #60a5fa;
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .prose pre {
    background-color: #2d2d2d;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .dark .prose pre {
    background-color: #1f2937;
  }

  .prose code {
    background-color: #f4f4f4;
    color: #1f2937;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }

  .dark .prose code {
    background-color: #374151;
    color: #e5e7eb;
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
    color: #f8f8f2;
  }

  .prose ul,
  .prose ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose blockquote {
    border-left: 4px solid #ddd;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #666;
    font-style: italic;
  }

  .dark .prose blockquote {
    border-left-color: #4b5563;
    color: #9ca3af;
  }

  .prose img {
    max-width: 100%;
    height: auto;
    margin: 1.5rem 0;
  }

  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .prose th,
  .prose td {
    border: 1px solid #ddd;
    padding: 0.75rem;
    text-align: left;
  }

  .dark .prose th,
  .dark .prose td {
    border-color: #4b5563;
  }

  .prose th {
    background-color: #f4f4f4;
    font-weight: 600;
  }

  .dark .prose th {
    background-color: #374151;
  }

  /* Print styles for better PDF export and printing */
  @media print {
    body {
      background: white !important;
      color: black !important;
    }

    article {
      max-width: 100% !important;
      padding: 0 !important;
    }

    .prose {
      color: black !important;
    }

    .prose h1,
    .prose h2,
    .prose h3,
    .prose h4,
    .prose h5,
    .prose h6 {
      color: black !important;
      page-break-after: avoid;
    }

    .prose a {
      color: #0066cc !important;
      text-decoration: underline;
    }

    .prose a[href]:after {
      content: " (" attr(href) ")";
      font-size: 0.8em;
      font-weight: normal;
    }

    .prose pre,
    .prose code {
      background-color: #f5f5f5 !important;
      color: black !important;
      border: 1px solid #ddd;
    }

    .prose img {
      max-width: 100% !important;
      page-break-inside: avoid;
    }

    .prose table {
      page-break-inside: avoid;
    }

    /* Hide navigation elements when printing */
    nav[aria-label="Post navigation"],
    header > nav,
    footer {
      display: none !important;
    }

    hr {
      border-color: #999 !important;
    }
  }
</style>
