---
import SEO from "../components/SEO.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <SEO
      title="404 - Page Not Found"
      description="The page you're looking for doesn't exist."
      canonical={Astro.url.href}
      type="website"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.png" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#ffffff" />
    <meta name="msapplication-TileColor" content="#ffffff" />

    <!-- Dark mode initialization script - prevents flash -->
    <script is:inline>
      // Initialize theme before page renders to prevent flash
      (function() {
        const savedTheme = localStorage.getItem('theme');

        // Default to dark mode unless explicitly set to light
        if (savedTheme !== 'light') {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>

    <title>404 - Page Not Found</title>
  </head>
  <body class="font-sans bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-200 overflow-y-scroll">
    <div class="min-h-screen flex items-center justify-center px-4 py-12">
      <div class="text-center">
        <!-- Fun Emoji Animation -->
        <div class="text-8xl mb-8 animate-bounce">
          ü§∑‚Äç‚ôÇÔ∏è
        </div>

        <!-- Playful 404 Message -->
        <h1 class="text-6xl sm:text-8xl font-bold mb-6">
          <span class="text-blue-600 dark:text-blue-400">4</span>
          <span class="text-gray-300 dark:text-gray-700">0</span>
          <span class="text-blue-600 dark:text-blue-400">4</span>
        </h1>

        <p class="text-2xl sm:text-3xl font-light text-gray-600 dark:text-gray-400 mb-3">
          Oops! Nothing here
        </p>

        <p class="text-base text-gray-500 dark:text-gray-500 mb-12">
          This page went on vacation üèñÔ∏è
        </p>

        <!-- Simple Home Link -->
        <a
          href="/"
          class="inline-block text-lg text-blue-600 dark:text-blue-400 hover:underline hover:scale-105 transition-transform duration-200"
        >
          ‚Üê Take me home
        </a>
      </div>
    </div>

    <style>
      @keyframes bounce {
        0%, 100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-20px);
        }
      }
      .animate-bounce {
        animation: bounce 2s infinite;
      }
    </style>
  </body>
</html>
