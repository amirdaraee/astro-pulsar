---
// Header component
import DarkModeToggle from './DarkModeToggle.astro';
import { NAV_ITEMS } from '../config';

// Filter out home link since it's in the logo
const navLinks = NAV_ITEMS.filter(item => item.href !== '/');
---

<header class="bg-white dark:bg-gray-900 w-full z-50 py-2 transition-colors duration-200">
  <!-- Skip to main content link for accessibility -->
  <a href="#main-content" class="skip-to-content">
    Skip to main content
  </a>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <nav class="flex items-center justify-between" aria-label="Main navigation">
      <a href="/" class="flex-shrink-0">
        <picture>
          <source srcset="/logo.webp" type="image/webp">
          <img src="/logo.png" alt="Amirdaraee logo" class="h-10 w-auto" />
        </picture>
      </a>

      <!-- Desktop menu and dark mode toggle -->
      <div class="hidden md:flex md:items-center md:space-x-1">
        <div class="flex items-center space-x-1 nav-links">
          {navLinks.map(item => (
            <a href={item.href} class="nav-link">{item.label}</a>
          ))}
        </div>
        <DarkModeToggle />
      </div>

      <!-- Mobile menu button and dark mode toggle -->
      <div class="md:hidden flex items-center space-x-2">
        <DarkModeToggle />
        <button
          type="button"
          class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-300 dark:hover:text-white dark:hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-gray-500 dark:focus:ring-gray-400 transition-colors duration-200"
          id="mobile-menu-button"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <span class="sr-only">Open main menu</span>
          <!-- Hamburger icon -->
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" id="menu-icon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <!-- Close icon (hidden by default) -->
          <svg class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" id="close-icon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </nav>

    <!-- Mobile menu (hidden by default) -->
    <div class="hidden md:hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 text-center">
        {navLinks.map(item => (
          <a href={item.href} class="block px-3 py-2 text-gray-900 hover:text-gray-600 dark:text-gray-100 dark:hover:text-gray-400 font-medium uppercase tracking-wide transition-colors duration-200">{item.label}</a>
        ))}
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  menuButton?.addEventListener('click', () => {
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
</script>

<style>
  /* Skip to content link - hidden until focused */
  .skip-to-content {
    position: absolute;
    top: -40px;
    left: 0;
    z-index: 100;
    padding: 8px 16px;
    background: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 0 0 4px 0;
    font-weight: 600;
    transition: top 0.3s;
  }

  .skip-to-content:focus {
    top: 0;
    outline: 3px solid #0056b3;
    outline-offset: 2px;
  }

  .nav-link {
    @apply relative inline-block px-4 py-2 text-gray-900 dark:text-gray-100 font-medium uppercase tracking-wide no-underline transition-colors duration-200;
  }

  .nav-link:hover {
    @apply text-gray-600 dark:text-gray-400;
  }

  /* Bracket hover effect */
  .nav-links .nav-link::before,
  .nav-links .nav-link::after {
    display: inline-block;
    opacity: 0;
    transition: transform 0.3s, opacity 0.2s;
  }

  .nav-links .nav-link::before {
    content: '[';
    margin-right: 10px;
    transform: translateX(20px);
  }

  .nav-links .nav-link::after {
    content: ']';
    margin-left: 10px;
    transform: translateX(-20px);
  }

  .nav-links .nav-link:hover::before,
  .nav-links .nav-link:hover::after,
  .nav-links .nav-link:focus::before,
  .nav-links .nav-link:focus::after {
    opacity: 1;
    transform: translateX(0px);
  }
</style>
