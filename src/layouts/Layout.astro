---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEO from '../components/SEO.astro';
import { SITE_CONFIG } from '../config';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  author?: string;
  publishedTime?: Date;
  tags?: string[];
  showCopyright?: boolean;
  compactFooter?: boolean;
}

const {
  title,
  description = SITE_CONFIG.description,
  image,
  type = 'website',
  author = SITE_CONFIG.author,
  publishedTime,
  tags,
  showCopyright = true,
  compactFooter = false
} = Astro.props;
---

<!doctype html>
<html lang={SITE_CONFIG.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <SEO
      title={title}
      description={description}
      canonical={Astro.url.href}
      image={image}
      type={type}
      author={author}
      publishedTime={publishedTime}
      tags={tags}
    />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.png" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#ffffff" />
    <meta name="msapplication-TileColor" content="#ffffff" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" />
    <link rel="preconnect" href="https://www.googletagmanager.com" />

    <!-- Dark mode initialization script - prevents flash -->
    <script is:inline>
      // Initialize theme before page renders to prevent flash
      (function() {
        const savedTheme = localStorage.getItem('theme');

        // Default to dark mode unless explicitly set to light
        if (savedTheme !== 'light') {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>

    <!-- Google Analytics -->
    {SITE_CONFIG.googleAnalyticsId && SITE_CONFIG.features.analytics && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${SITE_CONFIG.googleAnalyticsId}`}></script>
        <script is:inline define:vars={{ gaId: SITE_CONFIG.googleAnalyticsId }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', gaId);
        </script>
      </>
    )}

    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen font-sans bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-200">
    <Header />
    <main class="flex-grow w-full relative" role="main" aria-label="Main content">
      <slot />
    </main>
    <Footer showCopyright={showCopyright} compact={compactFooter} />
  </body>
</html>

<style is:global>
  /* Custom utility classes */
  .small-icon {
    max-width: 25px;
    max-height: 25px;
  }

  .divider-custom {
    margin: 0rem 0 1.5rem;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .divider-custom .divider-custom-line {
    width: 100%;
    max-width: 7rem;
    height: 0.25rem;
    background-color: #2c3e50;
    border-radius: 1rem;
    border-color: #2c3e50 !important;
  }
  .dark .divider-custom .divider-custom-line {
    background-color: #cbd5e0;
    border-color: #cbd5e0 !important;
  }
  .divider-custom .divider-custom-line:first-child {
    margin-right: 1rem;
  }
  .divider-custom .divider-custom-line:last-child {
    margin-left: 1rem;
  }
  .divider-custom .divider-custom-icon {
    color: #2c3e50 !important;
    font-size: 2rem;
  }
  .dark .divider-custom .divider-custom-icon {
    color: #cbd5e0 !important;
  }
  .divider-custom.divider-light .divider-custom-line {
    background-color: #fff;
  }
  .divider-custom.divider-light .divider-custom-icon {
    color: #fff !important;
  }

  /** animation **/
  .animateScale {
    transition:transform 0.25s ease;
  }

  .animateScale:hover {
    -webkit-transform:scale(1.1);
    transform:scale(1.1);
  }

  .animated-img {
    cursor: pointer;
    background: transparent;
    outline: none;
    transition:transform 0.25s ease;
  }

  .animated-img:hover {
    -webkit-transform: scale(0.8);
    -ms-transform: scale(0.8);
    transform: scale(0.8);
  }
</style>
